\newcommand{\PDerN}[3]{\frac{\mathpp^{#1}{#2}}{\mathpp{#3}^{#1}}}
\newcommand{\PXDer}[3]{\frac{\mathpp^2{#1}}{\mathpp{#2}\mathpp{#3}}}
